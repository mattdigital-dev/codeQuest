generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String             @id @default(cuid())
  displayName       String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  progress          Progress?
  challengeStatuses ChallengeStatus[]
  events            EventLog[]
}

model Progress {
  id               String   @id @default(cuid())
  userId           String   @unique
  unlockedZones    String[] @default([])
  completedZones   String[] @default([])
  activeZone       String?
  lastChallengeId  String?
  xp               Int      @default(0)
  badges           String[] @default([])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id])
}

model ChallengeStatus {
  id           String   @id @default(cuid())
  userId       String
  challengeId  String
  status       String   @default("locked")
  attempts     Int      @default(0)
  completedAt  DateTime?
  user         User     @relation(fields: [userId], references: [id])

  @@unique([userId, challengeId])
  @@index([challengeId])
}

model EventLog {
  id        String   @id @default(cuid())
  userId    String
  eventType String
  payload   Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([eventType])
}
